{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Wrangler Dev",
            "type": "shell",
            "command": "wrangler",
            "args": ["dev"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Wrangler Deploy (Staging)",
            "type": "shell",
            "command": "wrangler",
            "args": ["deploy", "--env", "staging"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Wrangler Deploy (Production)",
            "type": "shell",
            "command": "wrangler",
            "args": ["deploy", "--env", "production"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Run API Tests",
            "type": "shell",
            "command": "npm",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Test Caching",
            "type": "shell",
            "command": "./test-caching-simple.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Wrangler KV List",
            "type": "shell",
            "command": "wrangler",
            "args": ["kv:namespace", "list"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Wrangler Tail Logs",
            "type": "shell",
            "command": "wrangler",
            "args": ["tail"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true
        }
    ]
}